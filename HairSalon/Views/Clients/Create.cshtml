@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h4>Add a new client</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  <br>
  @Html.LabelFor(model => model.DateAdded)
  @Html.TextBoxFor(model => model.DateAdded)
  <br>
  @Html.LabelFor(model => model.Details)
  @Html.TextAreaFor(model => model.Details)
  <br>
  @Html.LabelFor(model => model.Stylist)
  @Html.DropDownList("StylistId")
  <br>
  <input type="submit" value="Add new client" class="btn btn-dark" />
}
<p>@Html.ActionLink("Show all clients", "Index")</p>