@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h2>Edit</h2>

<h4>Edit this stylist's info: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.StylistId)

  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  <br>
  @Html.LabelFor(model => model.HireDate)
  @Html.TextBoxFor(model => model.HireDate)
  <br> 
  @Html.LabelFor(model => model.Nickname)
  @Html.TextBoxFor(model => model.Nickname)
  <br>
  <input type="submit" value="Save" class="btn btn-dark" />
}
<p>@Html.ActionLink("Back to Stylists", "Index")</p>